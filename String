package stringop;
import java.util.*;  

public class Stringop {
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner sc= new Scanner(System.in); //System.in is a standard input stream  
System.out.print("Enter a string: ");  
String str= sc.nextLine();              //reads string   
System.out.print("You have entered: "+str); 
System.out.println("\n Uppercase of string is "+str.toUpperCase());
System.out.println("Length of string is "+str.length());
System.out.println("String starts with p "+str.startsWith("p"));
System.out.println("first character of string is "+ str.charAt(0));
System.out.println("replace a with p "+str.replace('a', 'p'));
    }
        
}
