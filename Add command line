public class add{
    public static void main(String args[]){

    

            for (int i = 0; i < args.length; i++) {
                System.out.println("Your argument " + (i + 1) + " is: " + Integer.parseInt(args[i]));
            }

            int add = 0;

            for (int i = 0; i < args.length; i++) {
                add = add + Integer.parseInt(args[i]);
            }

            System.out.println("\nAddition is : " + add);
    
        } 
    }
        
